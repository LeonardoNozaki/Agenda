<h1><%= @var.length %> eventos registrados</h1>

<%@var.each do |thing| %>
  <ul><%= thing.nome %></ul>
  <%= link_to 'deletado', eventos_delete_path(id: thing.id), method: :get %>

<% end %>

<h1><%= @var1.length %> users registrados</h1>

<%@var1.each do |thing| %>
  <ul><%= thing.nome %></ul>
<% end %>


<%= link_to 'Criar evento', eventos_new_path %>

<form action="/eventos/find" method="POST">
  <!-- Essa linha é necessária para autenticar nosso formulário -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="date" name="data">
  <input type="submit">
</form>
