<div class="col-12 row d-flex justify-content-center" style="margin-top: 5rem;">
  <div class="card card_salvar shadow">
    <center>
      <h2 style="margin-bottom: 20px; padding-top: 0px;">Criar conta</h2>
    </center>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification message: 'Erro!' %>

      <div class="form-group">
        <div class="form-inline">
          <%= f.input :nome,
                      label: 'Nome completo',
                      required: true,
                      autofocus: true,
                      input_html: { class: "form-control form-custom" }%>
        </div>
        <div class="form-inline">
        <%= f.input :aniversario,
                    required: true,
                    as: :date,
                    html5: true,
                    start_year: Date.today.year - 90,
                    end_year: Date.today.year - 12,
                    input_html: { class: "form-control form-custom date-custom", :type => "date" },
                    order: [:day, :month, :year] %>
        </div>
        <div class="form-inline">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control form-custom" }%>
        </div>
        <div class="form-inline">
          <%= f.input :password,
                      label: 'Senha',
                      required: true,
                      input_html: { autocomplete: "new-password", class: "form-control form-custom" } %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: 'btn btn-success btn_salvar' %>
      </div>
    <% end %>
    <hr class="hr_login" style="margin-top: 15px; margin-bottom: 15px;">
    <center>
      <%= render "devise/shared/links" %>
    </center>
  </div>
</div>
